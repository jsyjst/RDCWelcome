<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rdc.rdcwelcome.widget.TitanicTextView
            android:id="@+id/my_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Welcome TO RDC"
            android:textColor="#fca72e"
            android:textSize="40sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="bottom|center_horizontal">


            <ImageView
                android:id="@+id/wanIv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_icon" />

            <TextView
                android:id="@+id/wanTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/wanIv"
                android:text="@string/welcome_text"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wanTv"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/wanIv"
                android:textColor="@color/gray"
                android:text="@string/welcome_second_text"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
